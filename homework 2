#include <iostream>
#include <iomanip>
using namespace std;

int main()
{
    double r = 4.7;
    double pi = 3.14159;
    double circumference = 0.0;
    double volume = 0.0;

    __asm {
        ; -------- Circumference = 2 * pi * r --------
        fld r            ; ST0 = r
        fld pi           ; ST0 = pi, ST1 = r
        fmul             ; ST0 = pi * r
        fld1             ; ST0 = 1.0
        fld1             ; ST0 = 1.0, ST1 = 1.0
        fadd             ; ST0 = 2.0
        fmul             ; ST0 = 2*pi*r
        fstp circumference

        ; -------- Volume = (4/3) * pi * r^3 --------
        fld r
        fld r
        fmul             ; r^2
        fld r
        fmul             ; r^3
        fld pi
        fmul             ; pi * r^3

        fld1
        fld1
        fadd             ; 2
        fld1
        fadd             ; 3
        fld1
        fadd             ; 4
        fdiv             ; 4/3
        fmul             ; (4/3)*pi*r^3

        fstp volume
    }

    cout << fixed << setprecision(2);
    cout << "Sphere radius = " << r << endl;
    cout << "Circumference = " << circumference << endl;
    cout << "Volume = " << volume << endl;

    return 0;
}
