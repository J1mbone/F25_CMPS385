#include <iostream>
#include <string>

using namespace std;

int main()
{
    string sentence;
    int uppercaseCount = 0;
    int digitCount = 0;

    cout << "Enter a sentence: ";
    getline(cin, sentence);

    for (char c : sentence)
    {
        if (c >= 'A' && c <= 'Z')
            uppercaseCount++;
        else if (c >= '0' && c <= '9')
            digitCount++;
    }

    cout << "No. of uppercase letter = " << uppercaseCount << endl;
    cout << "No. of digits = " << digitCount << endl;

    return 0;
}
