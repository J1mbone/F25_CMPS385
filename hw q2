#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

int main()
{
    int numbers[10];
    int sum = 0, maxVal;

    srand((unsigned)time(0));

    cout << "List of random numbers: ";

    for (int i = 0; i < 10; i++)
    {
        numbers[i] = rand() % 20;
        cout << numbers[i] << " ";
        sum += numbers[i];
    }

    maxVal = numbers[0];
    for (int i = 1; i < 10; i++)
    {
        if (numbers[i] > maxVal)
            maxVal = numbers[i];
    }

    cout << endl;
    cout << "Maximum = " << maxVal << endl;
    cout << "Average = " << sum / 10 << endl;

    return 0;
}
