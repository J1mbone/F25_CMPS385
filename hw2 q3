#include <iostream>
#include <string>
using namespace std;

int main()
{
    string sentence;
    int upperCount = 0;
    int digitCount = 0;

    cout << "Enter a sentence: ";
    getline(cin, sentence);

    for (char c : sentence)
    {
        if (c >= 'A' && c <= 'Z')
            upperCount++;
        else if (c >= '0' && c <= '9')
            digitCount++;
    }

    cout << "Length of input: " << sentence.length() << endl;
    cout << "Input sentence: " << sentence << endl;
    cout << "No. of uppercase letters = " << upperCount << endl;
    cout << "No. of digits = " << digitCount << endl;

    return 0;
}
