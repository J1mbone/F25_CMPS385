#include <iostream>
#include <fstream>
#include <iomanip>
#include <string>
using namespace std;

const int MAX = 100;

struct Box {
    int id;
    string itemName;
    float weight;
    string destination;
};

struct Stack {
    Box boxes[MAX];
    int top;
};

void initializeStack(Stack &s);
bool isEmpty(Stack s);
bool isFull(Stack s);
void push(Stack &s, Box b);
Box pop(Stack &s);
Box peek(Stack s);
void displayStack(Stack s);
void viewInventorySummary(Stack s);
void saveToFile(Stack s);

int main() {
    Stack warehouse;
    initializeStack(warehouse);

    int choice;
    cout << "****** Welcome to Warehouse Inventory Stack Tracker ******\n";

    do {
        cout << "\nPlease choose one of the following operations:\n";
        cout << "1. Add Box to Stack\n";
        cout << "2. View Current Stack\n";
        cout << "3. Remove Top Box (Dispatch)\n";
        cout << "4. View Inventory Summary\n";
        cout << "5. Exit\n";
        cout << "Enter choice: ";
        cin >> choice;
        cin.ignore();

        switch (choice) {
            case 1: {
                if (isFull(warehouse)) {
                    cout << "Stack is full. Cannot add more boxes.\n";
                } else {
                    Box b;
                    cout << "Enter Box ID: ";
                    cin >> b.id;
                    cin.ignore();
                    cout << "Enter Item Name: ";
                    getline(cin, b.itemName);
                    cout << "Enter Weight (kg): ";
                    cin >> b.weight;
                    cin.ignore();
                    cout << "Enter Destination: ";
                    getline(cin, b.destination);

                    push(warehouse, b);
                    cout << "Box added to stack!\n";
                }
                break;
            }
            case 2:
                displayStack(warehouse);
                break;
            case 3:
                if (isEmpty(warehouse)) {
                    cout << "Stack is empty. No boxes to dispatch.\n";
                } else {
                    Box dispatched = pop(warehouse);
                    cout << "Top box dispatched:\n";
                    cout << "ID: " << dispatched.id
                         << ", Item: " << dispatched.itemName
                         << ", Destination: " << dispatched.destination << "\n";
                }
                break;
            case 4:
                viewInventorySummary(warehouse);
                break;
            case 5:
                saveToFile(warehouse);
                cout << "Inventory saved to inventory.txt. Have a productive day!\n";
                break;
            default:
                cout << "Invalid choice. Try again.\n";
        }
    } while (choice != 5);

    return 0;
}


void initializeStack(Stack &s) {
    s.top = -1;
}

bool isEmpty(Stack s) {
    return s.top == -1;
}

bool isFull(Stack s) {
    return s.top == MAX - 1;
}

void push(Stack &s, Box b) {
    s.top++;
    s.boxes[s.top] = b;
}

Box pop(Stack &s) {
    Box b = s.boxes[s.top];
    s.top--;
    return b;
}

Box peek(Stack s) {
    return s.boxes[s.top];
}

void displayStack(Stack s) {
    if (isEmpty(s)) {
        cout << "Stack is empty.\n";
        return;
    }

    cout << "========= STACKED BOXES (Top to Bottom) =========\n";
    cout << left << setw(10) << "Box ID"
         << setw(15) << "Item"
         << setw(12) << "Weight(kg)"
         << setw(15) << "Destination" << "\n";
    cout << "-----------------------------------------------\n";

    for (int i = s.top; i >= 0; i--) {
        cout << left << setw(10) << s.boxes[i].id
             << setw(15) << s.boxes[i].itemName
             << setw(12) << s.boxes[i].weight
             << setw(15) << s.boxes[i].destination << "\n";
    }
}

void viewInventorySummary(Stack s) {
    if (isEmpty(s)) {
        cout << "Stack is empty. No inventory to display.\n";
        return;
    }

    float totalWeight = 0;
    for (int i = 0; i <= s.top; i++) {
        totalWeight += s.boxes[i].weight;
    }

    Box topBox = peek(s);

    cout << "========== INVENTORY SUMMARY ==========\n";
    cout << "Total Boxes in Stack: " << (s.top + 1) << "\n";
    cout << fixed << setprecision(1);
    cout << "Total Weight: " << totalWeight << " kg\n";
    cout << "Top Box: ID " << topBox.id << " - " << topBox.itemName << "\n";
    cout << "=======================================\n";
}

void saveToFile(Stack s) {
    ofstream outFile("inventory.txt");
    if (!outFile) {
        cerr << "Error saving to file.\n";
        return;
    }

    outFile << "ID,Item,Weight,Destination\n";
    for (int i = s.top; i >= 0; i--) {
        outFile << s.boxes[i].id << ","
                << s.boxes[i].itemName << ","
                << s.boxes[i].weight << ","
                << s.boxes[i].destination << "\n";
    }

    outFile.close();
}
